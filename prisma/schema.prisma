generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Todo {
  id        Int      @id @default(autoincrement())
  title     String
  dueDate   DateTime
  createdAt DateTime  @default(now())
  imageUrl  String?
  imageAlt  String?
  
  // Dependency relationships
  dependencies TodoDependency[] @relation("DependentTodos")  // What this task needs to wait for (incoming)
  dependents   TodoDependency[] @relation("TodoDependencies") // What tasks are waiting for this task (outgoing)
}

model TodoDependency {
  id          Int      @id @default(autoincrement())
  parentTodo  Int
  childTodo   Int
  createdAt   DateTime @default(now())
  
  // Relationships
  parent      Todo     @relation("TodoDependencies", fields: [parentTodo], references: [id], onDelete: Cascade)
  child       Todo     @relation("DependentTodos", fields: [childTodo], references: [id], onDelete: Cascade)
  
  // Unique constraint to prevent duplicate dependencies and circular references
  @@unique([parentTodo, childTodo])
}